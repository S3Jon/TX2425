<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:rotationX="2"
    tools:context=".MainActivity">

    <!-- Campo para el t칤tulo del libro -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:text="Nombre del autor:"
        android:textSize="18sp" />

    <!-- Campo para el nombre del autor -->
    <EditText
        android:id="@+id/etAuthorName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ingrese el nombre"
        android:inputType="text"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:text="Pais de origen:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etAuthorCountry"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:hint="Ingrese el pais del autor"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <!-- Campo para la fecha de publicaci칩n -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:text="A침o de nacimiento:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etBirthYear"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:hint="Ingrese a침o:"
        android:inputType="date"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnMostratAutores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mostrar Datos" />

    <TextView
        android:id="@+id/tvAuthorData"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:text="aqui se muestran los datos de los autores" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/buttonAnadir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="-0"
            android:rotationX="0"
            android:rotationY="15"
            android:text="A침adir libro"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="0"
            android:rotationX="0"
            android:rotationY="-15"
            android:text="Actualizar"
            android:paddingStart="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnBuscarPorNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="-0"
            android:rotationX="0"
            android:rotationY="15"
            android:text="Buscar autor por nombre"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/btnBuscarPorPais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="0"
            android:rotationX="0"
            android:rotationY="-15"
            android:text="Buscar por pais"
            android:paddingStart="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/BuscarPorA침o"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="-0"
            android:rotationX="0"
            android:rotationY="15"
            android:text="Buscar por a침o"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/btnLol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="0"
            android:rotationX="0"
            android:rotationY="-15"
            android:text="Secreto游뱖"
            android:paddingStart="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCambiarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vista Libros" />


</LinearLayout>