<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity" android:id="@+id/main">

    <!-- Campo para el título del libro -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del libro:"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <!-- Campo para el nombre del autor -->
    <EditText
        android:id="@+id/etBookTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ingrese el título"
        android:inputType="text"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor del libro:"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etAuthorName"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:hint="Ingrese el nombre del autor"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <!-- Campo para la fecha de publicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de publicación:"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etPublicationDate"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:hint="Ingrese la fecha de publicación"
        android:inputType="date"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Datos"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvBookData"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:text="aqui se muestran los datos del libro" />


</LinearLayout>