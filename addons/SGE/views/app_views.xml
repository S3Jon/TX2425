<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_app_form" model="ir.ui.view">
        <field name="name">sge.app.form</field>
        <field name="model">sge.app</field>
        <field name="arch" type="xml">
            <form>
                <header>
					<field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed,cancelled"/>
					<button name="action_set_in_progress" type="object" string="En Desarrollo" class="oe_highlight" modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
					<button name="action_set_completed" type="object" string="Completada" class="oe_highlight" modifiers="{'invisible': [('state', '!=', 'in_progress')]}"/>
					<button name="action_set_cancelled" type="object" string="Cancelada" class="oe_highlight" modifiers="{'invisible': [('state', 'not in', ['draft', 'in_progress'])]}"/>
					<button name="action_reset_to_draft" type="object" string="Reiniciar a Borrador" class="oe_highlight" modifiers="{'invisible': [('state', 'not in', ['in_progress', 'completed', 'cancelled'])]}"/>
				</header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="coordinator_id"/>
                        </group>
                        <group>
                            <field name="is_ios_compatible"/>
                            <field name="total_hours"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Horas por Empleado">
                            <field name="employee_hours_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_app_tree" model="ir.ui.view">
        <field name="name">sge.app.tree</field>
        <field name="model">sge.app</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_id"/>
                <field name="coordinator_id"/>
                <field name="is_ios_compatible"/>
                <field name="total_hours"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_app_search" model="ir.ui.view">
        <field name="name">sge.app.search</field>
        <field name="model">sge.app</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="client_id"/>
                <field name="coordinator_id"/>
                <filter string="Compatible iOS" name="ios" domain="[('is_ios_compatible', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Cliente" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Coordinador" name="group_coordinator" context="{'group_by': 'coordinator_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>