<odoo>
    <!-- Vista de árbol -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">sge.project.tree</field>
        <field name="model">sge.project</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-success="state=='in_progress'" decoration-warning="state=='developing'" decoration-danger="state=='cancelled'">
                <field name="name"/>
                <field name="state"/>
                <field name="company_id"/>
                <field name="communicator_id"/>
                <field name="has_ios_support"/>
                <!-- <field name="total_hours" sum="Total Horas"/> -->
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">sge.project.form</field>
        <field name="model">sge.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,developing,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Proyecto"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información Principal">
                            <field name="company_id"/>
                            <field name="communicator_id" domain="[('is_communicator', '=', True)]"/>
                            <field name="has_ios_support"/>
                        </group>
                        <group string="Métricas">
                            <field name="total_hours" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Empleados">
                            <field name="employees_ids" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="hours_spent"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_project_filter" model="ir.ui.view">
        <field name="name">sge.project.filter</field>
        <field name="model">sge.project</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
                <field name="communicator_id"/>
                <separator/>
                <filter name="ios_support" string="Con Soporte iOS" domain="[('has_ios_support', '=', True)]"/>
                <filter name="no_ios_support" string="Sin Soporte iOS" domain="[('has_ios_support', '=', False)]"/>
                <separator/>
                <filter name="draft" string="Borrador" domain="[('state', '=', 'draft')]"/>
                <filter name="in_progress" string="En Desarrollo" domain="[('state', '=', 'in_progress')]"/>
                <filter name="developing" string="Desarrollando" domain="[('state', '=', 'developing')]"/>
                <filter name="cancelled" string="Cancelado" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Soporte iOS" name="has_ios_support" context="{'group_by': 'has_ios_support'}"/>
                    <filter string="Comunicador" name="communicator" context="{'group_by': 'communicator_id'}"/>
                    <filter string="Empresa Cliente" name="company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_sge_project" model="ir.actions.act_window">
        <field name="name">Proyectos</field>
        <field name="res_model">sge.project</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_project_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer proyecto
            </p>
            <p>
                Gestiona los proyectos de tu empresa, asigna comunicadores y empleados.
            </p>
        </field>
    </record>
</odoo>