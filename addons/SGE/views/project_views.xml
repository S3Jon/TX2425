<odoo>
    <!-- Vista de árbol -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">sge.project.tree</field>
        <field name="model">sge.project</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state=='cancelled'" decoration-muted="state=='draft'" decoration-info="state=='in_progress'" decoration-warning="state=='review'" decoration-success="state=='done'">
                <field name="name"/>
                <field name="state"/>
                <field name="company_id"/>
                <field name="communicator_id"/>
                <field name="has_ios_support"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">sge.project.form</field>
        <field name="model">sge.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="cancelled,draft,in_progress,review,done"/>
                    <button name="action_set_cancelled" type="object" string="Cancelada" class="btn-danger" modifiers="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"/>
                    <button name="action_set_draft" type="object" string="Planificando" class="btn-secondary" modifiers="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"/>
                    <button name="action_set_in_progress" type="object" string="En Desarrollo" class="btn-primary" modifiers="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"/>
                    <button name="action_set_review" type="object" string="Revisando" class="btn-warning" modifiers="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"/>
                    <button name="action_set_done" type="object" string="Terminada" class="btn-success" modifiers="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Proyecto"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información Principal">
                            <field name="company_id"/>
                            <field name="communicator_id" domain="[('is_communicator', '=', True)]"/>
                            <field name="has_ios_support"/>
                            <field name="start_date" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                        <group string="Métricas">
                            <field name="total_hours" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Horas Trabajadas">
                            <field name="project_hours_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_project_filter" model="ir.ui.view">
        <field name="name">sge.project.filter</field>
        <field name="model">sge.project</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
                <field name="communicator_id"/>
                <field name="start_date"/>
                <separator/>
                <filter name="ios_support" string="Con Soporte iOS" domain="[('has_ios_support', '=', True)]"/>
                <filter name="no_ios_support" string="Sin Soporte iOS" domain="[('has_ios_support', '=', False)]"/>
                <separator/>
                <filter name="cancelled" string="Cancelada" domain="[('state', '=', 'cancelled')]"/>
                <filter name="draft" string="Planificando" domain="[('state', '=', 'draft')]"/>
                <filter name="in_progress" string="En Desarrollo" domain="[('state', '=', 'in_progress')]"/>
                <filter name="review" string="Revisando" domain="[('state', '=', 'review')]"/>
                <filter name="done" string="Terminada" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Soporte iOS" name="has_ios_support" context="{'group_by': 'has_ios_support'}"/>
                    <filter string="Comunicador" name="communicator" context="{'group_by': 'communicator_id'}"/>
                    <filter string="Empresa Cliente" name="company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_sge_project" model="ir.actions.act_window">
        <field name="name">Proyectos</field>
        <field name="res_model">sge.project</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_project_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer proyecto
            </p>
            <p>
                Gestiona los proyectos de tu empresa, asigna comunicadores y empleados.
            </p>
        </field>
    </record>
</odoo>