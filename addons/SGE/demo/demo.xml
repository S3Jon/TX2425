<odoo>
    <!-- Datos demo para Empresas -->
    <record id="demo_company_1" model="res.company">
        <field name="name">Empresa Uno</field>
        <field name="favorite_social_network">twitter</field>
    </record>
    <record id="demo_company_2" model="res.company">
        <field name="name">Empresa Tres</field>
        <field name="favorite_social_network">facebook</field>
    </record>

    <!-- Datos demo para Empleados -->
    <record id="demo_employee_1" model="hr.employee">
        <field name="name">Juan Pérez</field>
        <field name="is_communicator">True</field>
    </record>
    <record id="demo_employee_2" model="hr.employee">
        <field name="name">Ana López</field>
        <field name="is_communicator">False</field>
    </record>
    <record id="demo_employee_3" model="hr.employee">
        <field name="name">Carlos Gómez</field>
        <field name="is_communicator">False</field>
    </record>

    <!-- Datos demo para Proyectos -->
    <record id="demo_project_1" model="sge.project">
        <field name="name">Proyecto A</field>
        <field name="state">draft</field>
        <field name="company_id" ref="demo_company_1"/>
        <field name="communicator_id" ref="demo_employee_1"/>
        <field name="employees_ids" eval="[(6, 0, [ref('demo_employee_2'), ref('demo_employee_3')])]"/>
        <field name="has_ios_support">True</field>
    </record>
    <record id="demo_project_2" model="sge.project">
        <field name="name">Proyecto B</field>
        <field name="state">in_progress</field>
        <field name="company_id" ref="demo_company_2"/>
        <field name="communicator_id" ref="demo_employee_1"/>
        <field name="employees_ids" eval="[(6, 0, [ref('demo_employee_3')])]"/>
        <field name="has_ios_support">False</field>
    </record>

    <!-- Datos demo para Horas Trabajadas -->
    <record id="demo_hours_1" model="sge.project.hours">
        <field name="project_id" ref="demo_project_1"/>
        <field name="employee_id" ref="demo_employee_2"/>
        <field name="hours">8</field>
    </record>
    <record id="demo_hours_2" model="sge.project.hours">
        <field name="project_id" ref="demo_project_1"/>
        <field name="employee_id" ref="demo_employee_3"/>
        <field name="hours">5</field>
    </record>
    <record id="demo_hours_3" model="sge.project.hours">
        <field name="project_id" ref="demo_project_2"/>
        <field name="employee_id" ref="demo_employee_3"/>
        <field name="hours">12</field>
    </record>
</odoo>
